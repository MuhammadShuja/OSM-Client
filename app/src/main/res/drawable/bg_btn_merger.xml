<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/white_two" />
            <stroke
                android:width="0dp"
                android:color="#2f6699" />
            <corners
                android:radius="50dp" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="#d3d3d3" />
            <stroke
                android:width="0dp"
                android:color="#808080" />
            <corners
                android:radius="50dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/white" />
            <stroke
                android:width="0dp"
                android:color="#2f6699" />
            <corners
                android:radius="50dp" />
        </shape>
    </item>

</selector>